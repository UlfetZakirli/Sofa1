<!-- breadcrumb -->
<div class="container header-mt">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb custom-breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Login</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- end breadcrumb -->
<!-- main content -->
<div class="main-content pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-8 col-12 mx-auto">
                <div class="custom-form custom-form--box">
                    <h3 class="custom-form__title">Login to your account</h3>
                    <form id="account" method="post"> 
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group custom-form__input">
                            <label for="inputEmail">Email Address</label>
                            <input type="email" asp-for="Input.Email" class="form-control ltr" id="inputEmail" placeholder="Email">
                        </div>
                        <div class="form-group custom-form__input">
                            <label for="password">Password</label>
                            <div class="input-box password-box">
                                <input type="password" asp-for="Input.Password" class="form-control ltr" id="password"  placeholder="Password">
                                <div class="input-box__icon">
                                    <span class="showhidepassword"><i class="far fa-eye-slash"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="forgot-pass">
                            <a href="resetpass.html">Forgot your password?</a>
                        </div>
                        <div class="custom-form__btn">
                            <button id="login-submit" type="submit" class="btn submit-btn">Login</button>
                        </div>
                        <div class="custom-form__footer">
                            <!-- login/sign up with social media -->
                            <div class="devider">
                                <span>login with</span>
                            </div>
                            <div class="social-login">
                                <ul>
                                    <li>
                                        <a href="#" class="social-icon fb-icon"><i class="fab fa-facebook"></i></a>
                                    </li>
                                    <li>
                                        <a href="#" class="social-icon tr-icon"><i class="fab fa-twitter"></i></a>
                                    </li>
                                    <li>
                                        <a href="#" class="social-icon gl-icon"><i class="fab fa-google"></i></a>
                                    </li>
                                </ul>
                            </div>
                            <!-- form footer -->
                            <div class="custom-form__footer--link">
                                <h6>Don't have an account yet?</h6>
                                <a href="sign_up.html" class="btn">Sign up</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end main content -->



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
