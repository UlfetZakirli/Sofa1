@model Entities.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Yeni Məhsul</h1>

<h4>Kateqoriya</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

                <input type="hidden" asp-for="CategoryIcon" class="form-control" />

             <div class="catIcon">
               
                <i class="fa-solid fa-couch"></i>
                <i class="fa-solid fa-chair"></i>
                <i class="fa-solid fa-bed"></i>
                <i class="fa-regular fa-solar-panel"></i>

             </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts{
   <script>
       $(".catIcon i").click(function(){
           $(".catIcon i").removeClass("active-icon")  
          const iconCat= $(this).attr("class")
            $(this).addClass("active-icon")
           $("#CategoryIcon").val(iconCat)
       })
   </script>
}

