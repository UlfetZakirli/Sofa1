
@{
    ViewData["Title"] = "Shopping Cart";
}
<!-- breadcrumb -->
<div class="container header-mt">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb custom-breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Cart</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- end breadcrumb -->
<!-- main content -->
<div class="main-content pb-80">
    <div class="container">
        <!-- product cart -->
        <div class="row" id="cartStyle">
            <!-- title -->
            <div class="col-12">
                <h1 class="main-title">Cart</h1>
            </div>
            <!-- cart items -->
            <div class="col-lg-9">
                <div class="item-cart" id="noBorder">
                    <div class="item-cart__row">
                        <div class="item-cart__row--img">
                            <div class="delete-item">
                                <a href="#"><i class="icon-bin"></i></a>
                            </div>

                            <a href="#">
                                <img src="/images/item11.jpg" alt="">
                                <span>Gray Modern dining Chair</span>
                            </a>
                        </div>
                        <div class="item-cart__row--details">
                            <span class="per-price">$69</span>
                            <div class="quantity">
                                <span class="quantity__minus"><i class="fas fa-minus"></i></span>
                                <input class="quantity__input" type="text" value="2" size="2">
                                <span class="quantity__plus"><i class="fas fa-plus"></i></span>
                            </div>
                            <span class="total-price"><strong>$112</strong></span>
                        </div>
                    </div>
                    <div class="item-cart__row">
                        <div class="item-cart__row--img">
                            <div class="delete-item">
                                <a href="#"><i class="icon-bin"></i></a>
                            </div>

                            <a href="#">
                                <img src="/images/item12.jpg" alt="">
                                <span>Gray Modern dining Chair</span>
                            </a>
                        </div>
                        <div class="item-cart__row--details">
                            <span class="per-price">$69</span>
                            <div class="quantity">
                                <span class="quantity__minus"><i class="fas fa-minus"></i></span>
                                <input class="quantity__input" type="text" value="2" size="2">
                                <span class="quantity__plus"><i class="fas fa-plus"></i></span>
                            </div>
                            <span class="total-price"><strong>$112</strong></span>
                        </div>
                    </div>
                    <div class="item-cart__row">
                        <div class="item-cart__row--img">
                            <div class="delete-item">
                                <a href="#"><i class="icon-bin"></i></a>
                            </div>

                            <a href="#">
                                <img src="/images/item13.jpg" alt="">
                                <span>Gray Modern dining Chair</span>
                            </a>
                        </div>
                        <div class="item-cart__row--details">
                            <span class="per-price">$69</span>
                            <div class="quantity">
                                <span class="quantity__minus"><i class="fas fa-minus"></i></span>
                                <input class="quantity__input" type="text" value="2" size="2">
                                <span class="quantity__plus"><i class="fas fa-plus"></i></span>
                            </div>
                            <span class="total-price"><strong>$112</strong></span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- cart total info -->
            <div class="col-lg-3">
                <!-- total info -->
                <div class="total-info">
                    <h2 class="total-info__title">Cart total</h2>
                    <div class="total-info__subprice">
                        <span>Subtotal</span>
                        <span>$112</span>
                    </div>
                    <div class="total-info__totalprice">
                        <span>Total</span>
                        <span>$112</span>
                    </div>
                    <div class="total-info__btn">
                        <a href="#" class="btn btn-block">Checkout</a>
                    </div>
                </div>
                <!-- coupon code -->
                <div class="row">
                    <div class="col-lg-12 col-md-6 col-12">
                        <div class="coupon coupon--mt">
                            <form>
                                <div class="input-group coupon__code ltr">
                                    <input type="text" class="form-control" placeholder="Enter coupon"
                                           aria-label="Enter coupon"
                                           aria-describedby="button-addon2">
                                    <div class="input-group-append">
                                        <button class="btn" type="button" id="button-addon2">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- subscribe call to action -->
        <div class="newsletter-banner mt-100"
             style="background-image: url('/images/banners/banner-bg-07.jpg');">
            <div class="banner__overlay"></div>
            <div class="container">
                <div class="newsletter-banner__content">
                    <h3>Daily offers and discounts</h3>
                    <form>
                        <div class="form-row">
                            <div class="col-lg-4 col-md-6 col-sm-8 col-10 mx-auto">
                                <div class="input-group ltr">
                                    <input type="email" class="form-control" id="subscribeInputEmail"
                                           placeholder="Enter your email" aria-describedby=Emailsubscribe>
                                    <div class="input-group-append">
                                        <button class="btn" type="submit" id="Emailsubscribe">Subscribe
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- end subscribe call to action -->
    </div>
</div>
<!-- end main content -->
